{
    "i18n": true,
    "type": "tabs",
    "items": {
        "_options": {
            "type": "panel",
            "label": "Options",
            "items": {
                "octoprintIp": {
                    "type": "text",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "IP",
                    "help": "IP of your OctoPrint installation"
                },
                "octoprintPort": {
                    "type": "number",
                    "min": 0,
                    "max": 65535,
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Port"
                },
                "customName": {
                    "newLine": true,
                    "type": "text",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Name",
                    "help": "Define your own printer name for this instance"
                },
                "octoprintApiKey": {
                    "type": "text",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "API-Key",
                    "help": "can be found in the settings section of OctoPrint"
                },
                "apiTimeoutSek": {
                    "newLine": true,
                    "type": "number",
                    "min": 1,
                    "max": 60,
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Request timeout"
                },
                "useHttps": {
                    "newLine": true,
                    "type": "checkbox",
                    "sm": 12,
                    "md": 12,
                    "lg": 12,
                    "label": "use HTTPS"
                },
                "pluginDisplayLayerProgress": {
                    "newLine": true,
                    "type": "checkbox",
                    "sm": 12,
                    "md": 12,
                    "lg": 12,
                    "label": "Enable plugin: Display Layer Progress"
                },
                "pluginSlicerThumbnails": {
                    "newLine": true,
                    "type": "checkbox",
                    "sm": 12,
                    "md": 12,
                    "lg": 12,
                    "label": "Enable plugin: Slicer Thumbnails"
                },
                "_ioBrokerKursBanner": {
                    "newLine": true,
                    "type": "staticImage",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "href": "https://haus-automatisierung.com/iobroker-kurs/?refid=iobroker-octoprint",
                    "src": "https://haus-automatisierung.com/images/ads/ioBroker-Kurs.png"
                }
            }
        },
        "_advanced": {
            "type": "panel",
            "label": "Extended options",
            "items": {
                "apiRefreshInterval": {
                    "type": "number",
                    "min": 1,
                    "max": 10000,
                    "sm": 12,
                    "md": 12,
                    "lg": 12,
                    "label": "Refresh Interval",
                    "help": "in Seconds"
                },
                "apiRefreshIntervalOperational": {
                    "newLine": true,
                    "type": "number",
                    "min": 1,
                    "max": 10000,
                    "sm": 12,
                    "md": 12,
                    "lg": 12,
                    "label": "Refresh Interval (while operational)",
                    "help": "in Seconds"
                },
                "apiRefreshIntervalPrinting": {
                    "newLine": true,
                    "type": "number",
                    "min": 1,
                    "max": 10000,
                    "sm": 12,
                    "md": 12,
                    "lg": 12,
                    "label": "Refresh Interval (while printing)",
                    "help": "in Seconds"
                }
            }
        }
    }
}